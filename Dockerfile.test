FROM rustlang/rust:nightly-slim AS build

RUN apt update -y \
    && apt upgrade -y \
    && apt install build-essential git librocksdb-dev clang cmake llvm llvm-dev libssl-dev pkg-config -y

RUN rustup target add wasm32-unknown-unknown --toolchain nightly

WORKDIR /opt/app
COPY . .
ENV RUSTFLAGS=-Dwarnings

RUN cargo fmt -- --check 

RUN cargo clippy --color=always --tests --features runtime-benchmarks

RUN cargo test --release --features runtime-benchmarks --workspace --exclude gn-node --exclude gn-wasm --exclude gn-frontend
